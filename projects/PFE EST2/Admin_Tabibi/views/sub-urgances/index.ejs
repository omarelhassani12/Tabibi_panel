  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>sub urgances</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">sub urgances</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                  <div class="row">
                      <div class="col-sm-12 text-right">
                        <div class="col-auto ms-auto d-print-none">
                          <div class="d-flex justify-content-end">
                            <a href="/addSubUrgance" class="btn btn-primary d-none d-sm-inline-block" >
                                      Create new urgance
                            </a>
                          </div>
                        </div>
                      </div>
                  </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>title</th>
                      <th>image</th>
                      <th>urgence</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% subUrgances.forEach((suburgance) => { %>
                      <tr>
                        <td class="text-center"><%= suburgance.name %></td>
                        <td class="text-center">
                          <img src="<%= suburgance.image %>" alt="Urgance Image" style="width: 100px; height: auto;">
                        </td>
                        <td class="text-center"><%= suburgance.urgency_name %></td>
                        <td class="text-center">
                          <a href="/update-sub-urgance/<%= suburgance.id %>" class="btn btn-success"><i class="fas fa-edit"></i></a>
                          <a href="/delete-suburgance/<%= suburgance.id %>" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>title</th>
                      <th>image</th>
                      <th>urgence</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
